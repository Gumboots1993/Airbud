<div class="container">
  <div class="form">
    <h1>New Buddy</h1>
    <%= simple_form_for @buddy do |f| %>
      <%= f.input :name  %>
      <%= f.input :buddy_type  %>
      <%= f.input :skills  %>
      <%= f.input :description %>
      <%= f.input :activities  %>
      <%= f.input :location  %>
      <%= f.input :url  %>
      <%= f.input :rate %>
      <%= f.button :submit, :class => "btn btn-primary" %>
    <% end %>

    <%= link_to 'Back', buddies_path, :class => "btn btn-primary" %>
  </div>
</div>
