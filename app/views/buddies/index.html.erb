<div class="container">
<h1>Buddies Near You</h1>
<div style="width: 100%; height: 600px;"
  data-controller="mapbox"
  data-mapbox-markers-value="<%= @markers.to_json %>"
  data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<div class="cards">

  <% @buddies.each do |buddy| %>
  <div class="card" style="background-image: url(https://ichef.bbci.co.uk/news/976/cpsprodpb/17638/production/_124800859_gettyimages-817514614.jpg)">
    <%= link_to buddy.name, buddy, class: "a-primary" %>
  </div>
  <% end %>
</div>
