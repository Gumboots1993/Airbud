<div class="container">
  <h1>Buddies Near You</h1>
  <br>
  <div style="width: 100%; height: 300px; margin-bottom: 16px; border-radius: 10px;"
    data-controller="mapbox"
    data-mapbox-markers-value="<%= @markers.to_json %>"
    data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
<br>
  <h1>Our Most Popular buddies</h1>
  <br>
   <div class="cards">
    <% @buddies.each do |buddy| %>

  <div class="card bg-transparent border-0">

    <img src= <%= buddy.url %> class="buddy-img" alt="" width="300px;" height="300px;">

  <div class="card-body">
    <div class="card-text">
      <h2><%= link_to buddy.name, buddy, :class => "stretched-link" %></h2>
      <p> <%= buddy.buddy_type %></p>
      <p>$<%= buddy.rate %>/day</p>
    </div>
  </div>
</div>

<% end %>

</div>
</div>
