<div class="container">
<h1> Tell us how your booking with <%= @booking.buddy.name %> went? </h1>
<br>
<div class="form_wrapper">
  <div class="form_div" style="width: 70%; height: auto; border-radius: 10px;">
  <div class="form" >
  <br>
    <%= simple_form_for [@booking, @review] do |f| %>
            <%= f.input :rating, collection: [1,2,3,4,5], placeholder: 'Enter a rating from 1 - 5' %>
            <%= f.input :comment, placeholder: 'Leave a comment' %>
            <%= f.button :submit, :class => "btn btn-primary" %>
            <%= link_to 'Back to booking page', booking_path(@booking), :class => "btn btn-info" %>
    <% end %>
    </div>
  </div>
  <div class="form_div" style="width: 70%; height: auto; border-radius: 10px;">
    <%= image_tag "notepad2.png" %>
  </div>
</div>
